<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.AndroidBase" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.AndroidBase.SplashScreen" parent="Theme.AndroidBase">
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Main application theme -->
    <style name="Theme.AndroidBase.Main" parent="Theme.AndroidBase">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- App Widget Theme -->
    <style name="ThemeOverlay.AndroidBase.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/white</item>
        <item name="appWidgetControlBackgroundColor">@color/colorPrimary</item>
        <item name="appWidgetTextColor">@color/colorPrimary</item>
        <item name="appWidgetControlTextColor">@color/white</item>
    </style>

</resources>