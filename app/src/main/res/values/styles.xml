<resources>

    <style name="mapsBubbleMarker">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardView.AndroidBase.Animation" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?android:attr/colorBackground</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="Button.AndroidBase.AppWidget" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:backgroundTint">?attr/appWidgetControlBackgroundColor</item>
        <item name="android:textColor">?attr/appWidgetControlTextColor</item>
        <item name="android:textSize">@dimen/widget_button_text_size</item>
    </style>

</resources>
